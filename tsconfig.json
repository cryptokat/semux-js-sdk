{
  "files": [
    "index.ts",
    "shim.ts",
    "test/index.ts",
    "test/api/index.ts"
  ],
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "diagnostics": true,
    "typeRoots": ["node_modules/@types", "types"],
    "lib": ["es2015", "es2016", "dom", "scripthost"]
  }
}